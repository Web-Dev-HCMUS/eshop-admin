<div class="page-wrapper">
    <div class="page-breadcrumb bg-white">
        <div class="row align-items-center">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title mb-3">Profile Information</h4>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <!-- Column -->
            <div class="col-lg-4 col-xlg-3 col-md-12">
                <div class="white-box">
                    <div class="user-bg">
                        <div class="overlay-box">
                            <div class="user-content">
                                <h1 class="text-white mt-2">{{admin.username}}</h1>
                                <h4 class="text-white mt-2">{{admin.email}}</h4>
                            </div>
                        </div>
                    </div>
                    <div class="user-btm-box mt-5 d-md-flex">
                        <div class="col-md-5 col-sm-5 text-center">
                            <h1>Pixie</h1>
                        </div>
                        <div class="col-md-4 col-sm-4 text-center">
                            <h1>Store</h1>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Column -->
            <!-- Column -->
            <div class="col-lg-8 col-xlg-9 col-md-12">
                <div class="card">
                    <div class="card-body">
                        <form class="form-horizontal form-material" method="post" action="/account/{{admin._id}}/update">

                            <div class="form-group mb-4">
                                <label class="col-md-12 p-0">Full Name</label>
                                <div class="col-md-12 border-bottom p-0">
                                    <input type="text" name="fullname" value="{{admin.fullname}}"
                                           class="form-control p-0 border-0"> </div>
                            </div>

                            <div class="form-group mb-4">
                                <label for="example-email" class="col-md-12 p-0">Email</label>
                                <div class="col-md-12 border-bottom p-0">
                                    <input type="email" name="email" value="{{admin.email}}"
                                           class="form-control p-0 border-0" name="example-email"
                                           id="example-email">
                                </div>
                            </div>

                            <div class="form-group mb-4">
                                <label class="col-md-12 p-0">Password</label>
                                <div class="col-md-12 border-bottom p-0">
                                    <input type="password" name="password" value="{{admin.password}}" class="form-control p-0 border-0">
                                </div>
                            </div>

                            <div class="form-group mb-4">
                                <label class="col-md-12 p-0">Phone No</label>
                                <div class="col-md-12 border-bottom p-0">
                                    <input type="text" name="phone" value="{{admin.phone}}"
                                           class="form-control p-0 border-0">
                                </div>
                            </div>

                            <div class="form-group mb-4">
                                <label class="col-md-12 p-0">Address</label>
                                <div class="col-md-12 border-bottom p-0">
                                    <input type="text" name="address" value="{{admin.address}}" class="form-control p-0 border-0">
                                </div>
                            </div>

                            <div class="form-group mb-4">
                                <label class="col-sm-12">Authority Level</label>
                                <div class="col-md-12 border-bottom p-0">
                                    {{admin.level}}
                                </div>
                            </div>

                            <div class="mb-3" style=" text-align: center;">
                                <button type="submit" class="btn btn-warning col-5">Update account</button>
                            </div>

                        </form>

                        <div class="mt-4" style="text-align: center; color: limegreen">
                            {{#if updateSuccess}}
                                <h2>Update profile successfully!</h2>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
            <!-- Column -->
        </div>
    </div>

    <footer class="footer text-center"> 2021 Â© <a
            href="https://www.wrappixel.com/">Pixie Store Admin</a>
    </footer>
</div>